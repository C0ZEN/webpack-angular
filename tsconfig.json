{
	"compilerOptions": {
		"declaration": false,
		"module": "commonjs",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"target": "es5",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"es5",
			"es6",
			"es7",
			"dom"
		],
		"suppressImplicitAnyIndexErrors": false,
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"core-js",
			"node"
		],
		"include": [
			"src/**/*"
		]
	},
	"exclude": [
		"./node_modules"
	]
}
